
@{
    ViewBag.Title = "Boletin";
}

<h2>Boletin</h2>

<div class="row">
    <div class="col-sm-6">
        <div id="form1">
            @using (Ajax.BeginForm("Form1", new AjaxOptions()
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "resp",
                LoadingElementId = "log",
                Confirm = "Estas seguro ke ese es el numero",
                OnSuccess = "FuncionOk",
                OnFailure = "FuncionNoOk"
            }))
            {
                <input type="text" name="txtCal" placeholder="Numero a Calcular" />
                <input type="submit" value="Calulate" />
                <img id="log" src="~/Content/Img/green-spin.gif" alt="Loading" style="display:none" />
            }
            Resultado: <span id="resp"></span>
        </div>
    </div>
    <div class="col-sm-6">
        @Ajax.ActionLink("LinkAjax", "ActionLink", new AjaxOptions()
   {
       HttpMethod = "GET",
       InsertionMode = InsertionMode.Replace,
       UpdateTargetId = "resultLink"
   })
        <div id="resultLink"></div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        function FuncionOk() {
            console.log("All Ok");
        }
        function FuncionNoOk() {
            console.log("All fail");
        }
    </script>
}