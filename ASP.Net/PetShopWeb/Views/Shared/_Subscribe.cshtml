

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("ActionName", "controlleName", FormMethod.Get, new { id = "frmSubscribe" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-12">
                        @Html.Label("Subscribe: ", new { @class = "control-label" })
                        @Html.Editor("subs", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>


